{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@conf": [
        "src/config.ts"
      ],
      "@bot": [
        "src/bot/index.ts"
      ],
      "@util": [
        "src/util/index.ts"
      ],
      "@entities": [
        "src/app/domains/entities/index.ts",
      ],
      "@repositories_ports": [
        "src/app/domains/repositoryPorts/index.ts",
      ],
      "@infrastructure": [
        "src/app/infrastructure/index.ts",
      ],
      "@useCases": [
        "src/app/useCases/index.ts",
      ],
    }
  }
}